<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="device" class="net.tajzich.raspberry.demo.domain.periphery.RaspberryPiDevice">
        <property name="peripherals">
            <list>
                <bean class="net.tajzich.raspberry.demo.domain.periphery.PCF8574Periphery" init-method="init">
                    <property name="name" value="I2C expander" />
                    <property name="address" value="32"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>
